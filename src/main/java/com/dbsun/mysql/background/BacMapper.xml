	<!--æŸ¥çœ‹æ‰€æœ‰æ‹¼å›¢æˆ–è€…ç”±è°å‘èµ·çš„æ‹¼å›¢åŠæ‹¼å›¢æˆå‘˜æˆ–è€…æˆ‘å‚åŠ çš„æ‹¼å›?->
	<select id="getPageAssembles" parameterType="page" resultType="pd" useCache="false">
        select
	    a.id,
          a.menu_id,
          a.originate_tm,
          a.originate_user_id,
		  (select USERNAME from app_user where USER_ID = a.originate_user_id) as originateUserName, /*æ‹¼å›¢å‘èµ·è€…ç”¨æˆ·å*/
          m.user_id,/*å‚å›¢äººå‘˜*/
		  (select USERNAME from app_user where USER_ID = m.user_id) as userName, /*å‚å›¢äººå‘˜ç”¨æˆ·å?/
          m.time, /*å‚å›¢æ—¶é—´*/
		  h.cuisine,
		  h.food_img,
		  h.food_name,
		  h.food_href_url,
		  h.food_introduce,
		  h.food_look_num,
		  h.type_id

        from app_menu_assemble a
		left join app_menu_assemble_mem m
		on a.id = m.assemble_id
		left join app_student_food_href_url h
		on a.menu_id = h.id
        where 1 = 1
        <if test="pd.originate_user_id != null and pd.originate_user_id != ''">
            and a.originate_user_id = #{pd.originate_user_id}
        </if>
		<if test="pd.user_id != null and pd.user_id != ''">
            and m.user_id = #{pd.user_id}
        </if>
		order by a.originate_tm desc
    </select>


